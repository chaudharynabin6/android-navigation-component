<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment1">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="fragment 1"
        android:textAlignment="center"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/navigate_to_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="navigate to history"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/navigate_to_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="navigate to history"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/navigate_to_fragment_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="navigate to fragment 2"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/navigate_to_fragment_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="navigate to fragment 3"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/navigate_to_nested_graph_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="navigate to nested graph 1"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/navigate_to_nested_graph_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="navigate to nested graph 2"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter some text"
        android:importantForAutofill="no"
        android:inputType="text"
        tools:ignore="HardcodedText,LabelFor" />

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="save"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</androidx.appcompat.widget.LinearLayoutCompat>